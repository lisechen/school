<!--pages/productReleased/productReleased.wxml-->
<!--商品发布-->
<form bindsubmit="formSubmit">
  <!--商品名称-->
  <view class='title'>
    <view class='title_text'>
      <text>商品名称:</text>
      <input name="goodsname" type='text' value='{{goodsname}}' bindblur='goodsnameBlur'></input>
    </view>
  </view>
  <!--商品价格-->
  <view class='title'>
    <view class='title_text'>
      <text>商品价格:</text>
      <input name="goodsPrice" type='number' value='{{goodsPrice}}' bindblur='goodsPriceBlur'></input>
    </view>
  </view>
  <!--商品信息-->
  <view class='info-point'>
    <view class='title_text'>
      <text>商品信息:</text>
      <textarea name="textdesc" class='textarea' value='{{textdesc}}' bindblur='textdescBlur'></textarea>
    </view>
  </view>
 
  <!--商品类别-->
  <view class='title'>
    <view class='title_text'>
      <text>商品类别:</text>
      <picker name="goodssort" mode="selector" range="{{goodssort}}" range-key="name" value="{{goodssortInd}}" bindchange="goodssort">
       <input id='{{goodssort[goodssortInd].id}}' name="goodssort" type='text' value='{{goodssort[goodssortInd].name}}'disabled='true'></input>
      </picker>
       <span class='icon iconfont icon-weibiaoti34'></span>
    </view>
  </view>
 
  <!--商品状态-->
  <view class='title'>
    <view class='title_text'>
      <text>商品状态:</text>
      <picker name="goodsState" mode="selector" range="{{goodsState}}" range-key="name" value="{{goodsStateInd}}" bindchange="goodsState">
        <input id='{{goodsState[goodsStateInd].id}}' name="goodsState" type='text' value='{{goodsState[goodsStateInd].name}}'disabled='true'></input>
      </picker>
      <span class='icon iconfont icon-weibiaoti34'></span>
    </view>
  </view>
 
  <!--上传图片-->
  <view class='upImv'>
    <view class='upImv_text'>详情图片上传</view>
    <view class="addImv">
      <!--这个是已经选好的图片-->
      <view wx:for="{{detail}}" wx:key="key" class="upFile" bindtap="showImageDetail" style="border-radius: 5px" data-id="{{index}}">
        <image class="itemImv" src="{{item}}"></image>
        <image class="closeImv" src="../img/add.png" mode="scaleToFill" catchtap="deleteImvDetail" data-id="{{index}}"></image>
      </view>
 
      <!--这个是选择图片-->
      <view class="chooseView" bindtap="chooseDetail" wx:if="{{chooseViewShowDetail}}">
        <image class="chooseImv" src="../img/add.png"></image>
      </view>
    </view>
 
  </view>
  <button form-type='submit' class='sureRelease'>确认发布</button>
</form>
